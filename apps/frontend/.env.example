# ============================================================================
# AIBidComposer Frontend - Environment Variables Example
# ============================================================================
# 复制此文件为 .env.local 并填写实际值

# ============================================================================
# API Endpoints Configuration
# ============================================================================

# Java Backend API (Port 8080) - 核心业务API
VITE_JAVA_API_BASE_URL=http://localhost:8080

# Python AI API (Port 8001) - AI服务API
VITE_AI_API_BASE_URL=http://localhost:8001

# WebSocket URL (Collaboration)
VITE_WS_BASE_URL=ws://localhost:8080

# ============================================================================
# Application Configuration
# ============================================================================

# Application Name
VITE_APP_NAME=AIBidComposer

# Environment (development | production | staging)
VITE_APP_ENV=development

# API Version
VITE_API_VERSION=v1

# Enable Debug Mode
VITE_DEBUG=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable AI Features
VITE_ENABLE_AI=true

# Enable Collaboration Features
VITE_ENABLE_COLLABORATION=true

# Enable Advanced Export (PDF/Word)
VITE_ENABLE_EXPORT=true

# Enable Mock Data (for development)
VITE_ENABLE_MOCK=false

# ============================================================================
# Authentication Configuration
# ============================================================================

# JWT Token Storage Key
VITE_TOKEN_KEY=ac_access_token

# Refresh Token Storage Key
VITE_REFRESH_TOKEN_KEY=ac_refresh_token

# Token Expiration Time (minutes)
VITE_TOKEN_EXPIRE_TIME=30

# ============================================================================
# Upload Configuration
# ============================================================================

# Maximum File Size (MB)
VITE_MAX_FILE_SIZE=50

# Allowed File Extensions (comma-separated)
VITE_ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.xlsx,.xls,.txt

# Upload API Endpoint
VITE_UPLOAD_API=/api/v1/upload

# ============================================================================
# UI Configuration
# ============================================================================

# Default Theme (light | dark)
VITE_DEFAULT_THEME=light

# Primary Color
VITE_PRIMARY_COLOR=#1890ff

# Layout Mode (side | top | mix)
VITE_LAYOUT_MODE=side

# Enable Page Header
VITE_ENABLE_PAGE_HEADER=true

# Enable Breadcrumb
VITE_ENABLE_BREADCRUMB=true

# ============================================================================
# Monitoring & Analytics
# ============================================================================

# Enable Analytics
VITE_ENABLE_ANALYTICS=false

# Sentry DSN (Error Tracking)
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_ID=

# ============================================================================
# Development Configuration
# ============================================================================

# API Request Timeout (ms)
VITE_API_TIMEOUT=30000

# Enable Request Logging
VITE_ENABLE_REQUEST_LOG=true

# Enable Performance Monitoring
VITE_ENABLE_PERFORMANCE=true

# ============================================================================
# Third-party Services (Optional)
# ============================================================================

# MinIO/S3 Configuration (if using direct upload)
VITE_MINIO_ENDPOINT=http://localhost:9000
VITE_MINIO_BUCKET=aibidcomposer

# OSS Configuration (Aliyun OSS)
VITE_OSS_REGION=
VITE_OSS_BUCKET=
